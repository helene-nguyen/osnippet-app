<%- include('../partials/head')  %>
<!--     <link rel="stylesheet" href="/css/reset.css"> -->
<link rel="stylesheet" href="/css/style.css">
</head>

<body>


    <div class="full-screen">
        <div>
            <div>
                <h1 class="title-home">O'Snippet</h1>

                <br>
            </div>
        </div>

        <% if(locals.error) { %>
        <div class="alert red">
            <%= error %>
        </div>
        <% } %>

        <% if(locals.user) { %>
        <div class="alert green">
            <p>Welcome, <%= user.username %> you can now sign in !</p>
        </div>
        <% } %>

        <div class="container <%= locals.user ? '' : 'right-panel-active' %> ">

            <!-- Sign Up -->
            <div class="container__form container--signup">
                <form action="/signup" class="form" id="form1" method="POST">
                    <h2 class="form__title">Sign Up</h2>
                    <input type="text" placeholder="Username" name="username" class="input" required />
                    <input type="email" placeholder="Email" name="email" class="input" required />
                    <input type="password" placeholder="Password" class="input" name="password" required />
                    <input type="password" placeholder="Confirm password" name="passwordConfirm" class="input"
                        required />
                    <button class="btn" type="submit">Sign Up</button>
                </form>
            </div>

            <!-- Sign In -->
            <div class="container__form container--signin">
                <form action="/signin" class="form" id="form2" method="POST">
                    <h2 class="form__title">Sign In</h2>
                    <input type="email" placeholder="Email" class="input" name="email" required />
                    <input type="password" placeholder="Password" class="input" name="password" required />
                    <a href="#" class="link">Forgot password ?</a>
                    <button class="btn" type="submit">Sign In</button>
                </form>
            </div>

            <!-- Overlay -->
            <div class="container__overlay">
                <div class="overlay">
                    <div class="overlay__panel overlay--left">
                        <button class="btn" id="signIn">Sign In</button>
                    </div>
                    <div class="overlay__panel overlay--right">
                        <button class="btn" id="signUp">Sign Up</button>
                    </div>
                </div>
            </div>
        </div>

    </div>


    <script src="/js/script.js"></script>
    <%- include('../partials/foot')  %>